<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Surface Models</category>
  <title>Pose To LabelMap</title>
  <description><![CDATA[Voxelize posed models into labelmap.]]></description>
  <version>0.1.0</version>
  <documentation-url>http://wiki.slicer.org/slicerWiki/index.php/Documentation/4.1/Modules/PoseToLabelMap</documentation-url>
  <license/>
  <contributor>Julien Finet (Kitware)</contributor>
  <acknowledgements><![CDATA[This work is funded by Air Force Research Labs]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output]]></description>
    <image>
      <name>RestLabelmap</name>
      <label>Rest Labelmap</label>
      <channel>input</channel>
      <index>0</index>
      <description><![CDATA[Labelmap volume in resting pose]]></description>
    </image>
    <geometry type="model">
      <name>RestModel</name>
      <label>Rest Model</label>
      <channel>input</channel>
      <index>1</index>
      <description><![CDATA[Model in resting pose]]></description>
    </geometry>
    <geometry type="model">
      <name>PosedModel</name>
      <label>Posed Model</label>
      <channel>input</channel>
      <index>2</index>
      <description><![CDATA[Posed model]]></description>
    </geometry>
    <file fileExtensions="*.arm">
      <name>Armature</name>
      <label>Armature</label>
      <channel>input</channel>
      <index>3</index>
      <description><![CDATA[Resting & posed armature]]></description>
    </file>
    <image type="label">
      <name>PosedLabelmap</name>
      <label>Posed LabelMap</label>
      <channel>output</channel>
      <index>4</index>
      <description><![CDATA[Generated labelmap]]></description>
    </image>
  </parameters>
  <parameters>
    <label>Voxelization</label>
    <description><![CDATA[Model voxelization setting]]></description>
    <float>
      <name>samplingDistance</name>
      <longflag>samplingDistance</longflag>
      <description><![CDATA[Sampling distance for the input model. Distance is relative to the smallest input volume spacing. A value of 1 means that 1 sample per voxel]]></description>
      <label>Sampling distance</label>
      <default>1.</default>
    </float>
  </parameters>
  <parameters>
    <label>Developer settings</label>
    <description><![CDATA[Developer settings]]></description>
    <boolean>
      <name>debug</name>
      <longflag>debug</longflag>
      <description><![CDATA[Save intermediate images]]></description>
      <label>Debug</label>
      <default>false</default>
    </boolean>
  </parameters>
</executable>
