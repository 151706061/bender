<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Filtering.Arithmetic</category>
  <title>Pose body</title>
  <description><![CDATA[Compute transform by linearly combining the armature edge transforms using pre-computed weights.]]></description>
  <version>0.1.0.$Revision$(alpha)</version>
  <documentation-url> ?? </documentation-url>
  <license/>
  <contributor>Yuanxin Liu (Kitware)</contributor>
  <acknowledgements><![CDATA[Air Force Research Laboratories]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <image>
      <name>WeightDirectory</name>
      <label>Directories containing all the weights</label>
      <channel>input</channel>
      <index>0</index>
      <description><![CDATA[Directiory containing the weight image files (one for each armature edge)]]></description>
    </image>
    <description><![CDATA[Input/output parameters]]></description>
    <geometry fileExtensions="*.vtk">
      <name>ArmaturePoly</name>
      <label>Armature</label>
      <channel>input</channel>
      <index>1</index>
      <description><![CDATA[Resting armature]]></description>
    </geometry>
    <geometry fileExtensions="*.stl">
      <name>SurfaceInput</name>
      <label>Surface</label>
      <channel>input</channel>
      <index>2</index>
      <description><![CDATA[Body Surface]]></description>
    </geometry>
    <geometry>
      <name>OutputSurface</name>
      <label>Surface output file</label>
      <channel>output</channel>
      <index>3</index>
      <description><![CDATA[Output surface]]></description>
    </geometry>
  </parameters>

  <parameters>
    <label>Controls</label>
    <description><![CDATA[Control how the module operates]]></description>
    <boolean>
      <name>LinearBlend</name>
      <label>Use linear blend to pose</label>
      <longflag>--linear</longflag>
      <description><![CDATA[Blend transform matrices linearly, which will result in non-rigid transforms]]></description>
      <default>false</default>
    </boolean>
  </parameters>

</executable>
